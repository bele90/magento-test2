<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <BlueCom_Swatches>
            <version>1.0.0</version>
        </BlueCom_Swatches>
    </modules>
    <frontend>
        <routers>
            <swatches>
                <use>standard</use>
                <args>
                    <module>BlueCom_Swatches</module>
                    <frontName>swatches</frontName>
                </args>
            </swatches>
        </routers>
        <layout>
            <updates>
                <swatches>
                    <file>bluecom/swatches.xml</file>
                </swatches>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <swatches>
                    <file>bluecom/swatches.xml</file>
                </swatches>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <blocks>
            <swatches>
                <class>BlueCom_Swatches_Block</class>
            </swatches>
            <adminhtml>
                <rewrite>
                    <catalog_product_attribute_edit_tab_main>BlueCom_Swatches_Block_Adminhtml_Catalog_Product_Attribute_Edit_Tab_Main</catalog_product_attribute_edit_tab_main>
                    <catalog_product_attribute_edit_tab_options>BlueCom_Swatches_Block_Adminhtml_Catalog_Product_Attribute_Edit_Tab_Options</catalog_product_attribute_edit_tab_options>
                    <catalog_product_attribute_edit_form>BlueCom_Swatches_Block_Adminhtml_Catalog_Product_Attribute_Edit_Form</catalog_product_attribute_edit_form>
					<catalog_product_edit_tab_super_config_grid_renderer_checkbox>BlueCom_Swatches_Block_Adminhtml_Catalog_Product_Attribute_Edit_Tab_Super_Config_Grid_Renderer</catalog_product_edit_tab_super_config_grid_renderer_checkbox>
                </rewrite>
            </adminhtml>
            <catalog>
                <rewrite>
                    <product_view_type_configurable>BlueCom_Swatches_Block_Catalog_Product_View_Type_Configurable</product_view_type_configurable>
                </rewrite>
            </catalog>
        </blocks>
        <helpers>
            <swatches>
                <class>BlueCom_Swatches_Helper</class>
            </swatches>
            <catalog>
                <rewrite>
                    <product>BlueCom_Swatches_Helper_Product</product>
                </rewrite>
            </catalog>
        </helpers>
        <models>
            <bluecom_swatches>
                <class>BlueCom_Swatches_Model</class>
                <resourceModel>bluecom_swatches_mysql4</resourceModel>
            </bluecom_swatches>
            <bluecom_swatches_mysql4>
                <class>BlueCom_Swatches_Model_Mysql4</class>
                <entities>
                    <attribute>
                        <table>bluecom_swatches_attribute</table>
                    </attribute>
                </entities>
            </bluecom_swatches_mysql4>
        </models>

        <resources>
            <bluecom_swatches_setup>
                <setup>
                    <module>BlueCom_Swatches</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bluecom_swatches_setup>
        </resources>

        <events>
            <controller_action_postdispatch_adminhtml_catalog_product_attribute_save>
                <observers>
                    <bluecom_swatches_save_observer>
                        <type>singleton</type>
                        <class>bluecom_swatches/observer</class>
                        <method>saveAttributesAfter</method>
                    </bluecom_swatches_save_observer>
                </observers>
            </controller_action_postdispatch_adminhtml_catalog_product_attribute_save>
            <catalog_product_save_before>
                <observers>
                    <bluecom_swatches_on_product_save>
                        <type>singleton</type>
                        <class>bluecom_swatches/observer</class>
                        <method>saveCatalogProductAfter</method>
                    </bluecom_swatches_on_product_save>
                </observers>
            </catalog_product_save_before>
            <core_block_abstract_to_html_after>
                <observers>
                    <bluecom_swatches_onlist>
                        <type>singleton</type>
                        <class>bluecom_swatches/observer</class>
                        <method>onListBlockHtmlBefore</method>
                    </bluecom_swatches_onlist>
                </observers>
            </core_block_abstract_to_html_after>
       </events>
    </global>
</config>
